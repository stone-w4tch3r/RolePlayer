<?xml version="1.0" encoding="UTF-8"?>

<Shell
    x:Class="RolePlayer.MAUI.UI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ui="clr-namespace:RolePlayer.MAUI.UI"
    xmlns:pages="clr-namespace:RolePlayer.MAUI.UI.Pages"
    NavBarIsVisible="False">

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate pages:MainPage}"
            Route="MainPage" />
        <ShellContent
            Title="Tracks"
            ContentTemplate="{DataTemplate pages:Tracks}"
            Route="Tracks" />
    </TabBar>


</Shell>