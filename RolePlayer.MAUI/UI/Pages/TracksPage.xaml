<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:RolePlayer.MAUI.UI.Views"
             x:Class="RolePlayer.MAUI.UI.Pages.Tracks">
    <ContentPage.Content>
        <Grid>
            <Label
                VerticalOptions="Start"
                HorizontalOptions="Center"
                Margin="40"
                FontSize="48"
                Text="Track Title"
                />
            <Image
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="Center"
                Scale="0.5"
                Source="track_placeholder.png"
                />
            <views:PlayerView
                HorizontalOptions="Center"
                VerticalOptions="End"
                Scale="0.5"
                />
        </Grid>
    </ContentPage.Content>
</ContentPage>